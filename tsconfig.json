{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "experimentalDecorators": true, // Enable decorator support
    "emitDecoratorMetadata": true, // Optionally add this for better metadata reflection (needed for some NestJS features)
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
